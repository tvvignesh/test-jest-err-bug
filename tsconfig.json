{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es2019",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "strict": true,
      "outDir": "dist",
      "baseUrl": "src",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "lib": ["es2019", "esnext.asynciterable", "dom", "es2020.promise"]
    },
    "exclude": ["node_modules"]
}